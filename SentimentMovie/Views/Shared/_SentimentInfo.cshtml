@model List<SentimentMovie.Models.SentimentViewModel>

<button class="sentiment-legend-button" data-toggle="modal" data-target="#show-modal-sentiment-info">Легенда настроений</button>


<div class="modal fade" id="show-modal-sentiment-info" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Легенда настроений</h4>
            </div>
            <div class="modal-body">
                    @if (Model.Count > 0)
                    {
                        <table class="table table-striped">
                        <tr>
                            <th>Название</th>
                            <th>Цвет</th>
                        </tr>
                        @foreach (var movie in Model)
                        {
                       
                            <tr>
                                <td class="sentiment-td">@movie.Name</td>
                                <td>
                                    <div class="square-sentinment" style="background-color:@movie.Color"></div>
                                </td>
                            </tr>
                        }
                        </table>
                    }
                    else
                    {
                        <p>Нет материала для отображения</p>
                    }

            </div>
            <div class="modal-footer">
                <button type="button" class="close-button" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>